---
import Header from "@/components/Header";
import Footer from "@/components/Footer";
import { ClientRouter, slide } from "astro:transitions";

interface Props {
	title: string;
	description?: string;
}

const { title, description = "A minimal blog focused on excellent reading experience" } =
	Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<ClientRouter />
	</head>
	<body class="min-h-screen bg-primary-950">
		<div class="mx-auto px-10 max-w-3xl">
			<Header title={title} transition:persist />
			<main class="my-10" transition:animate={slide({ duration: ".3s" })}>
				<slot />
			</main>
			<Footer transition:persist />
		</div>
	</body>
</html>
