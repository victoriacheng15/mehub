---
import { currentYear, navItems } from "@/utils";
---

<footer class="grid gap-8 py-6 text-center">
	<nav>
		<ul class="flex flex-wrap items-center justify-center gap-4 md:gap-6 lg:gap-8">
			{
				navItems.map(({ href, text }) => (
					<li class="rounded-lg p-2 text-lg hover:bg-secondary-900 duration-300 ease-in-out">
						<a href={href}>{text}</a>
					</li>
				))
			}
		</ul>
	</nav>
	<p>
		&copy; {currentYear}
		<span aria-label="penguin emoji">🐧</span> Victoria's Blog. All rights reserved.
	</p>
</footer>
