---
interface Props {
	tags: string[];
}

const { tags } = Astro.props;
---

<div class="mt-4 flex flex-wrap gap-2">
	{
		tags.map((tag) => (
			<a
				href={`/tags/${tag}`}
				class="bg-secondary-900 hover:bg-secondary-800 text-white rounded-full px-3 py-1 text-sm duration-300 ease-in-out"
			>
				#{tag}
			</a>
		))
	}
</div>
