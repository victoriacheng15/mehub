---
import { PROJECTS } from "@/utils";
---

<section class="grid gap-10">
	{PROJECTS.map(({ title, description, link, techs }) => (
		<section class=" space-y-2 rounded-md shadow-md shadow-secondary-900 dark:bg-primary-900 border border-primary-100 dark:border-primary-700 p-6 hover:shadow-lg transition-transform hover:-translate-y-2 duration-300">
			<h2 class="text-xl font-bold">
				<a
					href={link}
					class="text-secondary-600 dark:text-secondary-300 hover:text-secondary-500 dark:hover:text-secondary-100 transition-colors duration-300"
					target="_blank"
					rel="noopener noreferrer"
				>
					{title}
				</a>
			</h2>
			<p class="tracking-wide text-gray-700 dark:text-gray-300">{description}</p>
			<ul class="flex flex-wrap gap-4 mt-4">
				{techs.map((tech) => (
					<li class="bg-secondary-700 dark:bg-secondary-900 text-white dark:text-secondary-100 rounded-full px-3 py-1 text-sm">
						{tech}
					</li>
				))}
			</ul>
		</section>
	))}
</section>
