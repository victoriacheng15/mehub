---
import { siteConfig } from "@/config";
import { navHeader } from "@/utils";
import SocialLinks from "./SocialLinks.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
const { title: siteTitle, slogan, description } = siteConfig;
---

<header class="py-6">
	<nav class="py-6">
		<ul class="flex flex-wrap items-center justify-center gap-4 md:gap-6 lg:gap-8">
			{
				navHeader.map(({ href, text }) => (
					<li>
						<a href={href} class="rounded-lg p-2 text-lg hover:bg-secondary-900 duration-300 ease-in-out">
							{text}
						</a>
					</li>
				))
			}
		</ul>
	</nav>
	{
		title === siteTitle && (
			<div class="grid gap-6 py-4">
				<h1 class="text-3xl font-extrabold tracking-wide text-secondary-400">Victoria Cheng</h1>
				<h2 class="text-xl text-secondary-300">Software Development Student at SAIT</h2>
				<h3 class="text-xl text-secondary-200">{slogan}</h3>
				<p class="text-lg leading-8 text-primary-100">{description}</p>
				<SocialLinks />
			</div>
		)
	}
</header>
