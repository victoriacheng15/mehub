---
import { siteConfig } from '../config'

interface Props {
  title: string;
}

const {title} = Astro.props;

const navItems = [
  { href: '/', text: 'Home' },
  { href: '/blog', text: 'Blog' },
  { href: '/tags', text: 'Tags' },
  { href: '/archive', text: 'Archive' },
];
---

<header class="my-20 text-primary-50 space-y-20">
  <nav class="flex justify-center items-center flex-wrap gap-10">
    <ul class="flex gap-4 md:gap-6">
      {navItems.map(({ href, text }) => (
        <li>
          <a
            href={href}
            class="px-4 py-2 text-lg rounded-lg hover:bg-secondary-950"
          >
            {text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
  {
    title === siteConfig.title && (
      <>
        <div class="space-y-6">
          <h1 class="text-3xl text-secondary-400 font-extrabold tracking-wide">Victoria Cheng</h1>
          <h2 class="text-xl text-secondary-300">Software Development Student at SAIT</h2>
          <h3 class="text-xl text-secondary-200">{siteConfig.slogan}</h3>
          <p class="text-lg text-primary-100 leading-8">{siteConfig.description}</p>
        </div>
      </>
    )
  }

</header>
