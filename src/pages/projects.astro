---
import BaseLayout from "@/layouts/BaseLayout";
import { PROJECTS } from "@/utils"
---

<BaseLayout title="Projects">
	<h1 class="mb-8 text-4xl font-bold text-secondary-100">Projects</h1>
  <section class="grid gap-10">
    {
      PROJECTS.map(({title, description, link, techs}) => (
        <section class="space-y-4 rounded-md border border-secondary-500 p-6 text-primary-100 transition-all duration-200">
          <h2 class="text-xl font-bold"><a href={link} class="text-secondary-200 hover:text-secondary-100" target="_blank" rel="noopener noreferrer">{title}</a></h2>
          <p class="tracking-wide">{description}</p>
          <ul class="flex flex-wrap gap-4">
            {
              techs.map(tech => (
                <li class="rounded-full bg-secondary-950 px-3 py-1 text-sm text-primary-50 ">{tech}</li>
              ))
            }
          </ul>
        </section>
      ))
    }
  </section>
</BaseLayout>