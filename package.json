{
  "name": "mehub",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "npx tsx scripts/generate-search-index.ts && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "biome lint ./src",
    "lint:md": "npx markdownlint-cli --fix src/**/*.md *.md",
    "check": "biome check --write ./src",
    "format": "biome format --write ./src/**/*.ts --write && prettier -w ./src/**/*.astro",
    "publish": "./scripts/publish_post.sh"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.14",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.4",
    "astro-expressive-code": "^0.41.3",
    "playwright": "^1.56.1",
    "rehype-mermaid": "^3.0.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1"
  }
}
