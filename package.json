    "astro-expressive-code": "^0.41.3",
    "playwright": "^1.56.1",
    "rehype-mermaid": "^3.0.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1"
  }
}
